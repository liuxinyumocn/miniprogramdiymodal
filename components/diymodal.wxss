
.bg{
  position: fixed;
  z-index: 9999;
  width: 100%;
  height: 100%;
  background-color: rgba(104, 104, 104, 0.699);
}

@keyframes box-ani-show {
  from {opacity: 0.0;}
  to {opacity: 1.0;}
}

@keyframes box-ani-hide {
  from {opacity: 1.0;}
  to {opacity: 0.0;}
}

.box-show {
  animation: box-ani-show 600ms ease-out;
}
.box-hide {
  animation: box-ani-hide 200ms ease-out;
}

.infobox{
  position: relative;
  min-height: 30rpx;
  width: 400px;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0px 0px 4px rgba(63, 63, 63, 0.164);
  margin: 0px auto;
  margin-top: 40%;
  padding:0px;
  padding-top: 30px;
}
@media screen and (max-width: 450px) {
  .infobox {
    max-width: 650rpx;
  }
}

.title{
  position: relative;
  text-align: center;
  font-weight: 500;
}

.content{
  position: relative;
  text-align: left;
  font-size: 17px;
  color: rgba(0, 0, 0, 0.603);
  margin: 0px 20px;
  margin-top: 10px;
}

.bottom_button_group{
  position: relative;
  border-top: 1px solid rgba(0, 0, 0, 0.11);
  display: flex;
  min-height: 55px;
  margin-top: 10px;
}

.button{
  width: 10000px;
  text-align: center;
  line-height: 55px;
  font-weight: bold;
}
.button:active{
  background-color: rgb(228, 228, 228);
  border-radius: 0px 0px 5px 5px;
}

.button_right{
  border-left: 1px solid rgba(0, 0, 0, 0.11);
}


.msg_box_text{
  display: inline;
  position: relative;
  font-size: 17px;
  color: rgba(0, 0, 0, 0.603);
  font-weight: normal;
  white-space: pre-wrap;
}

.msg_box_a{
    display: inline;
    position: relative;
    font-size: 17px;
    line-height: 16px;
    text-align: center;
    font-weight: normal;
    color: #576B95;
}