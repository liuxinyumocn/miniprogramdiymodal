
.diymodal_bg{
  position: fixed;
  z-index: 9999;
  width: 100%;
  height: 100%;
  background-color: rgba(104, 104, 104, 0.699);
  display: flex;
  justify-content: center;
  align-items: center;
}

@keyframes diymodal_box-ani-show {
  from {opacity: 0.0;}
  to {opacity: 1.0;}
}

@keyframes diymodal_box-ani-hide {
  from {opacity: 1.0;}
  to {opacity: 0.0;}
}

.diymodal_box-show {
  animation: diymodal_box-ani-show 800ms ease-out;
}
.diymodal_box-hide {
  animation: diymodal_box-ani-hide 200ms ease-out;
}

.diymodal_infobox{
  position: relative;
  min-height: 30rpx;
  width: 400px;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0px 0px 4px rgba(63, 63, 63, 0.164);
  margin: 0px auto;
  padding:0px;
  padding-top: 30px;
}
@media screen and (max-width: 450px) {
  .diymodal_infobox {
    max-width: 650rpx;
  }
}

.diymodal_title{
  position: relative;
  text-align: center;
  font-weight: 500;
  font-size: 17px;
}

.diymodal_content{
  position: relative;
  text-align: left;
  font-size: 17px;
  color: rgba(0, 0, 0, 0.603);
  margin: 0px 20px;
  margin-top: 10px;
}

.diymodal_bottom_button_group{
  position: relative;
  border-top: 1px solid rgb(209, 209, 209);
  display: flex;
  min-height: 55px;
  margin-top: 20px;
}

.diymodal_button{
  width: 10000px;
  text-align: center;
  line-height: 55px;
  font-weight: bold;
  font-size: 16px;
}
.diymodal_button:active{
  background-color: rgb(228, 228, 228);
  border-radius: 0px 0px 5px 5px;
}

.diymodal_button_right{
  border-left: 1px solid rgb(209, 209, 209);
}


.diymodal_msg_box_text{
  display: inline;
  position: relative;
  font-size: 17px;
  color: rgba(0, 0, 0, 0.603);
  font-weight: normal;
  white-space: pre-wrap;
}

.diymodal_msg_box_a{
    display: inline;
    position: relative;
    font-size: 17px;
    line-height: 16px;
    text-align: center;
    font-weight: normal;
    color: #576B95;
}